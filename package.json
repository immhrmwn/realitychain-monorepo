{
  "name": "root",
  "private": true,
  "scripts": {
    "lerna": "lerna",
    "build": "lerna run build --scope=@realitychain/{erc20,sdk,webapp}",
    "test": "lerna run test --scope=@realitychain/{near-nft,erc20,sdk}",
    "prepare": "lerna run prepare --scope=@realitychain/{erc20,sdk,webapp}",
    "lint": "lerna run lint --scope=@realitychain/{near-nft,erc20,sdk}",
    "format": "lerna run format --scope=@realitychain/{near-nft,erc20,sdk}"
  },
  "resolutions": {
    "**/ethers": "^5.6.8",
    "**/@ethersproject/contracts": "^5.6.2"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "hardhat": "^2.9.6",
    "husky": "^8.0.1",
    "lerna": "^5.1.4",
    "ts-node": "^10.8.2"
  },
  "workspaces": [
    "packages/*",
    "packages/realitychain-contracts/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "yarn lint",
      "yarn format"
    ]
  }
}
