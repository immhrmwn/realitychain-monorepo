{
  "name": "@realitychain/sdk",
  "version": "0.0.1-beta.0",
  "description": "Reality Chain SDK for Frontend Applications.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "check": "yarn test:unit && yarn format && yarn lint && yarn build",
    "format": "prettier --write \"(src|example|test)/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "yarn build",
    "prepublishOnly": "npm test && yarn lint && yarn build",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config ./test/jest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/realitychainio/realitychain-monorepo.git"
  },
  "keywords": [
    "web3",
    "metaverse",
    "sdk",
    "js",
    "typescript",
    "near",
    "near-sdk"
  ],
  "author": "Agustinus Theodorus <agustinustheoo@gmail.com>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/realitychainio/realitychain-monorepo/issues"
  },
  "homepage": "https://github.com/realitychainio/realitychain-monorepo#readme",
  "dependencies": {
    "js-base64": "^3.7.2",
    "near-api-js": "^0.45.1"
  },
  "devDependencies": {
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "babel-jest": "^28.1.2",
    "jest": "^28.1.2",
    "prettier": "^2.5.1",
    "regenerator-runtime": "^0.13.9",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.5.5"
  },
  "directories": {
    "test": "test"
  }
}
